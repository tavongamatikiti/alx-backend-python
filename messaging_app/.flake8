[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    node_modules,
    .tox,
    .eggs,
    *.egg,
    build,
    dist
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
    settings.py:E501
count = True
statistics = True
show-source = True